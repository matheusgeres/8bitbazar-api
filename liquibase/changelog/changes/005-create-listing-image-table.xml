<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.25.xsd">

    <changeSet id="005-create-listing-image-table" author="eightbitbazar">
        <createTable tableName="listing_images">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="listing_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="url" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>
            <column name="position" type="INT" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
            baseTableName="listing_images"
            baseColumnNames="listing_id"
            constraintName="fk_listing_images_listing"
            referencedTableName="listings"
            referencedColumnNames="id"/>

        <createIndex tableName="listing_images" indexName="idx_listing_images_listing_id">
            <column name="listing_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
